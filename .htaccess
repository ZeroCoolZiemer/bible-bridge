RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^bible/([a-z0-9]+)/old-testament$ /old-testament.php?v=$1 [L,QSA]
RewriteRule ^bible/([a-z0-9]+)/new-testament$ /new-testament.php?v=$1 [L,QSA]

RewriteRule ^bible/([^/]+)/([^/]+)/([^/]+)/([^/]+)/?$ search-bible.php?v=$1&book=$2&chapter=$3&verse=$4 [L,QSA]
RewriteRule ^bible/([^/]+)/([^/]+)/([^/]+)/?$ search-bible.php?v=$1&book=$2&chapter=$3 [L,QSA]

# Remove .php extension
RewriteRule ^old-testament$ /old-testament.php [L]
RewriteRule ^new-testament$ /new-testament.php [L]
RewriteRule ^about$ /about.php [L]
RewriteRule ^contact$ /contact.php [L]
RewriteRule ^get-started$ /get-started.php [L]
RewriteRule ^unauthorized$ /unauthorized.php [L]